<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/kgmain"
        android:layout_marginTop="46dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KG Wash"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="#e1dbdb"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wash with free hands"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:textColor="#e1dbdb"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="minimum order Rs.200"
            android:gravity="center"
            android:textColor="#e1dbdb"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/ordernow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Now"
            android:onClick="ordernow"
            android:background="@drawable/bordersxm"
            android:layout_marginTop="8dp"
            android:textColor="#e1dbdb"
            android:layout_marginLeft="250dp"/>
        <TextView
            android:id="@+id/johnno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call  9000379005"
            android:textSize="22sp"
            android:textColor="#e1dbdb"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Why To Choose KG Wash"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#5c5959"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:orientation="vertical"
           android:layout_margin="10dp"
           android:weightSum="1">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Door Step pick up and Delivery"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:textColor="#155a83"
                   android:layout_weight="0.4"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:layout_margin="10dp"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/verticaldotted"
                   android:layout_weight="0.2"
                   android:layerType="software" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="Eco-Friendly Wash"
                   android:textColor="#155a83"
                   android:layout_weight="0.4"/>
           </LinearLayout>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="5dp"
               android:layout_margin="10dp"
               android:src="@drawable/dottedborder"
               android:layerType="software" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Affordable Price"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:textColor="#155a83"
                   android:layout_weight="0.4"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:layout_margin="10dp"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/verticaldotted"
                   android:layout_weight="0.2"
                   android:layerType="software" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="Premium Plans"
                   android:textColor="#155a83"
                   android:layout_weight="0.4"/>
           </LinearLayout>

       </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Services"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#5c5959"
                android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0.5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Basic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:onClick="basic"
            android:src="@drawable/washfold" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="basic"
            android:gravity="center"
            android:text="@string/washfoldxml"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_weight="0.5">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/silver"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:onClick="silver"
                android:src="@drawable/washiron" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="silver"
                android:text="@string/washironxml"
                android:gravity="center"/>

        </LinearLayout>
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_weight="0.5">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/gold"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:onClick="gold"
                        android:src="@drawable/iron" />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:onClick="gold"
                        android:text="@string/ironxml"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
