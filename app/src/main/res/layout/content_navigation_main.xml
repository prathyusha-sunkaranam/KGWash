<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/wfviewer"
        android:layout_marginTop="46dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KG Wash"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="#e1dbdb"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wash with free hands"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:textColor="#e1dbdb"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="minimum order Rs.200"
            android:gravity="center"
            android:textColor="#e1dbdb"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/ordernow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Now"
            android:onClick="ordernow"
            android:background="@drawable/bordersxm"
            android:layout_marginTop="8dp"
            android:textColor="#e1dbdb"
            android:layout_marginLeft="250dp"/>
        <TextView
            android:id="@+id/johnno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call  9000379005"
            android:textSize="22sp"
            android:textColor="#e1dbdb"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Why To Choose KG Wash"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#c19961"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Services"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#c19961"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.4"
                        android:drawableLeft="@drawable/pricetag"
                        android:drawablePadding="8dp"
                        android:text="Door Step pick up and Delivery"
                        android:textColor="#155a83" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.2"
                        android:layerType="software"
                        android:src="@drawable/verticaldotted" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.4"
                        android:drawableLeft="@drawable/eco"
                        android:drawablePadding="8dp"
                        android:text="Eco-Friendly Wash"
                        android:textColor="#155a83" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_margin="10dp"
                    android:layerType="software"
                    android:src="@drawable/dottedborder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.4"
                        android:text="Affordable Price"
                        android:drawableLeft="@drawable/pricetag"
                        android:drawablePadding="8dp"
                        android:textColor="#155a83" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.2"
                        android:layerType="software"
                        android:src="@drawable/verticaldotted" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.4"
                        android:text="Premium Plans"
                        android:textColor="#155a83" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0.5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Basic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/washfold" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="basic"
            android:gravity="center"
            android:text="@string/washfoldxml"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_weight="0.5">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/silver"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/washiron" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:onClick="silver"
                android:text="@string/washironxml"
                android:gravity="center"/>

        </LinearLayout>
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_weight="0.5">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/gold"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/iron" />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ironxml"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
