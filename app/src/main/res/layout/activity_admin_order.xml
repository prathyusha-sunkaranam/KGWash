<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mansopresk.mansopresk01.kgwash.AdminOrder">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarprofile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4b9ac9"
        android:gravity="top"
        android:minHeight="50dp"
        app:theme="@style/ToolbarStyle"
        app:titleMarginTop="@dimen/margin_to_center"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <TextView
            android:id="@+id/toolbartextprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="User Orders"
            android:textColor="#fff"
            android:textSize="20sp"/>
        <!---->
        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/dots"-->
        <!--/>-->


    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#4B9AC9"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/oname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_weight="0.4"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Mobile Number :"
                                android:inputType="text" />


                            <TextView


                                android:layout_weight="0.4"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="2dp"
                                android:layout_height="30dp"

                                android:scaleType="centerCrop"

                                android:alpha="0.7"
                                android:layout_weight="0.2"
                                android:id="@+id/phcall1"
                                android:src="@drawable/callerimage"/>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:inputType="text"
                                android:text="Email :"
                                android:textSize="15dp"
                                android:layout_marginTop="10dp"/>

                            <TextView

                                android:id="@+id/email_admin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:inputType="text" />

                            <pl.droidsonroids.gif.GifImageView
                                android:id="@+id/useremail"
                                android:layout_width="2dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.2"

                                android:alpha="0.7"
                                android:scaleType="centerCrop"

                                android:src="@drawable/mailuser" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:inputType="text"
                                android:text="Adress :"
                                android:textSize="15dp"
                                android:layout_marginTop="10dp"/>

                            <TextView


                                android:id="@+id/adress_admin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:inputType="text" />

                            <pl.droidsonroids.gif.GifImageView
                                android:id="@+id/userlocation"
                                android:layout_width="2dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.2"

                                android:alpha="0.7"
                                android:scaleType="centerCrop"

                                android:src="@drawable/location" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:inputType="text"
                                android:text="LandMark :"
                                android:textSize="15dp" />

                            <TextView

                                android:id="@+id/landmark_admin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:inputType="text" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            >

                            <TextView

                                android:id="@+id/date_admin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:inputType="text"
                                android:text="Date :"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/timeslot_admin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:inputType="text"
                                android:layout_marginTop="10dp"
                                android:text="TimeSlot" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#4B9AC9">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Mobile Number :"
                                android:inputType="text" />


                            <TextView


                                android:layout_weight="0.4"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="2dp"
                                android:layout_height="30dp"

                                android:scaleType="centerCrop"

                                android:alpha="0.7"
                                android:layout_weight="0.2"

                                android:src="@drawable/callerimage"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="0.4"
                                android:layout_marginTop="10dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Email :"
                                android:inputType="text" />

                            <TextView

                                android:layout_weight="0.4"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="2dp"
                                android:layout_height="50dp"

                                android:scaleType="centerCrop"

                                android:alpha="0.7"
                                android:layout_weight="0.2"

                                android:src="@drawable/mailuser"/>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="0.4"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Adress :"
                                android:inputType="text"
                                android:layout_marginTop="10dp"/>

                            <TextView


                                android:layout_weight="0.4"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="2dp"
                                android:layout_height="50dp"

                                android:scaleType="centerCrop"

                                android:alpha="0.7"
                                android:layout_weight="0.2"

                                android:src="@drawable/location"/>




                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="0.5"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="LandMark :"
                                android:inputType="text" />

                            <TextView

                                android:layout_weight="0.5"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="text" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Date :"
                                android:layout_marginTop="10dp"
                                android:inputType="text" />

                            <TextView
                                android:text="TimeSlot"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"
                                android:inputType="text" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



